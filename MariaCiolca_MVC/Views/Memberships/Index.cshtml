@model IEnumerable<MariaCiolca_MVC.Models.MembershipsModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Memberships</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idMember)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idMembershipType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idMember)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idMembershipType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.idMembership">Edit | </a>
                    }
                    <a asp-action="Details" asp-route-id="@item.idMembership">Details</a> 
                    @if (User.IsInRole("Admin"))
                    {
                <a asp-action="Delete" asp-route-id="@item.idMembership"> | Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
