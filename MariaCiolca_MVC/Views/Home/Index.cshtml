@{
    ViewData["Title"] = "Home Page";

}
<!DOCTYPE html>
<html>
<head>
    <title>W3.CSS Template</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body, h1 {
            font-family: "Raleway", Arial, sans-serif;
        }

        h1 {
            letter-spacing: 6px;
        }

        .w3-display-container img {
            width: 100%;
            margin-top: 20px; /* Adjust the value to raise or lower the image */
            margin-bottom: 50px;
        }

        /* Add some padding to the top of the header */
        header.w3-panel {
            padding-top: 80px; /* Adjust the value to raise or lower the text */
        }
    </style>
</head>
<body>

    <!-- !PAGE CONTENT! -->
    <div class="w3-content" style="max-width:1500px">

        <!-- Header -->
        <header class="w3-panel w3-center w3-opacity" style="padding:128px 16px">
            <h1 class="w3-xlarge"> Welcome to my MVC project! </h1>
            <h1> ------------------------------</h1>
        </header>

        <!-- Photo Grid -->
        <div class="w3-display-container w3-grayscale" style="margin-bottom:128px">
            <div class="w3-display-middle">
                <img src="https://images.unsplash.com/photo-1484417894907-623942c8ee29?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDF8fHxlbnwwfHx8fHw%3D&auto=format&fit=crop&w=500&q=60">
            </div>
        </div>

        <!-- End Page Content -->
    </div>

    <!-- Footer -->
    <footer>
        <!-- Add content for the footer here -->
    </footer>

</body>
</html>
